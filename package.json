{
  "name": "serpapi-diagnostic-workbench",
  "type": "module",
  "scripts": {
    "dev": "concurrently --raw \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "vite --host",
    "dev:backend": "bun --watch backend/server.ts",
    "build": "vite build && bun build backend/server.ts --target bun --outdir dist/backend",
    "build:frontend": "vite build",
    "build:backend": "bun build backend/server.ts --target bun --outdir dist/backend",
    "start": "NODE_ENV=production PORT=3000 bun backend/server.ts",
    "format": "prettier --write .",
    "lint": "biome check --write --unsafe .",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.server.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "docker-compose up",
    "docker:build": "docker build -t serpapi-diagnostic-workbench ."
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@libsql/client": "^0.15.15",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-router": "^1.144.0",
    "cheerio": "^1.1.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "jsdom": "^27.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "^1.3.5",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "bun-types": "^1.3.5",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
